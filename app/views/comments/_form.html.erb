<%= form_for @comment do |f| %>
	<div class="form-group">
		<%= f.text_area :description, class: "form-control" %>
	</div>	
	<%= f.hidden_field :article_id, :value => @article.id %>
	<%= f.hidden_field :user_id, :value => @user.id %>
	<div class="form-group">
		<%= f.submit :class => "btn btn-success" %>
	</div>	
<% end %>	
	